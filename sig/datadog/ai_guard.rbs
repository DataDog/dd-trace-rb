module Datadog
  module AIGuard
    class AIGuardAbortError < StandardError
      @action: ::String
      @reason: ::String
      @tags: ::Array[::String]

      def initialize: (action: ::String, reason: ::String, tags: ::Array[::String]) -> void

      def to_s: () -> ::String
    end

    def self.enabled?: () -> bool

    def self.api_client: () -> APIClient?

    def self.logger: () -> Core::Logger?

    def self.evaluate: (*Evaluation::Message messages, ?allow_raise: bool) -> (Evaluation::Result | Evaluation::NoOpResult)

    def self.message: (role: ::String | ::Symbol, content: ::String) -> Evaluation::Message

    def self.assistant: (tool_name: ::String, id: ::String | ::Numeric, arguments: ::String) -> Evaluation::Message

    def self.tool: (tool_call_id: ::String | ::Numeric, content: ::String) -> Evaluation::Message
  end
end
